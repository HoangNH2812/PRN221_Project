@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Artist</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist.Fullname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist.Fullname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist.Studio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist.Studio.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Artist.ArtistId" />
        @if (Model.AccountArtist.Status == 1)
        {
            <input type="submit" value="Inactive" class="btn btn-danger" />
        } else
        {
            <input type="submit" value="Active" class="btn btn-danger" />
        }
        <a class="small fw-bold mt-2 pt-1 mb-0" asp-page="./Index">Back</a>
    </form>
</div>
