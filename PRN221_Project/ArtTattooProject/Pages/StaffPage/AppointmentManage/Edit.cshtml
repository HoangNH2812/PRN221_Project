@page
@model ArtTattooProject.Pages.StaffPage.AppointmentManage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
   @*          <input type="hidden" asp-for="Appointment.AppointmentId" /> *@
            <div class="form-group">
                <label asp-for="Appointment.AppointmentId" class="control-label"></label>
                <input asp-for="Appointment.AppointmentId" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Appointment.TotalPrice" class="control-label"></label>
                <input asp-for="Appointment.TotalPrice" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Appointment.Status" class="control-label"></label>
                <select asp-for="Appointment.Status" class="form-control" asp-items="ViewBag.Status"></select>
                <span asp-validation-for="Appointment.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.TattooLoverId" class="control-label"></label>
                <input asp-for="Appointment.TattooLoverId" class="form-control" readonly>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Appointment.StudioId" class="form-control">
            </div>
            <div class="form-group small fw-bold mt-2 pt-1 mb-0">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="text-danger">@Model.Msg</div>
</div>

<div>
    <a class="small fw-bold mt-2 pt-1 mb-0" asp-page="./Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
