@page
@model ArtTattooProject.Pages.CRUDTemplate.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Appointment.TotalPrice" class="control-label"></label>
                <input asp-for="Appointment.TotalPrice" class="form-control" />
                <span asp-validation-for="Appointment.TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.Status" class="control-label"></label>
                <input asp-for="Appointment.Status" class="form-control" />
                <span asp-validation-for="Appointment.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.TattooLoverId" class="control-label"></label>
                <select asp-for="Appointment.TattooLoverId" class ="form-control" asp-items="ViewBag.TattooLoverId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.StudioId" class="control-label"></label>
                <select asp-for="Appointment.StudioId" class ="form-control" asp-items="ViewBag.StudioId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

