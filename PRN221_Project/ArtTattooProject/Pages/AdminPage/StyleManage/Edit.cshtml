@page
@model ArtTattooProject.Pages.AdminPage.StyleManage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Style</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Style.StyleId" />
            <div class="form-group">
                <label asp-for="Style.StyleName" class="control-label"></label>
                <input asp-for="Style.StyleName" class="form-control" />
                <span asp-validation-for="Style.StyleName" class="text-danger"></span>
            </div>
            <div class="form-group small fw-bold mt-2 pt-1 mb-0">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="small fw-bold mt-2 pt-1 mb-0" asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
