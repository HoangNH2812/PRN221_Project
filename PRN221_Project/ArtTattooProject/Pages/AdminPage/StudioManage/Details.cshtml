@page
@model ArtTattooProject.Pages.AdminPage.StudioManage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Studio</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Studio.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Studio.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Studio.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Studio.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Studio.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Studio.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Studio.Website)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Studio.Website)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Studio?.StudioId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].StaffName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].StaffPhone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Staff)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StaffName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StaffPhone)
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    var prevDisabledStaff = !Model.Staff.HasPreviousPage ? "disabled" : "";
    var nextDisabledStaff = !Model.Staff.HasNextPage ? "disabled" : "";
}

<a asp-page="./Index"
   asp-route-pageIndexStaff="@(Model.Staff.PageIndex - 1)"
   class="btn btn-primary @prevDisabledStaff">
    Previous
</a>
<a asp-page="./Index"
   asp-route-pageIndexStaff="@(Model.Staff.PageIndex + 1)"
   class="btn btn-primary @nextDisabledStaff">
    Next
</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Artist[0].Fullname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist[0].Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Artist)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fullname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    var prevDisabledArtist = !Model.Artist.HasPreviousPage ? "disabled" : "";
    var nextDisabledArtist = !Model.Artist.HasNextPage ? "disabled" : "";
}

<a asp-page="./Index"
   asp-route-pageIndexArtist="@(Model.Artist.PageIndex - 1)"
   class="btn btn-primary @prevDisabledArtist">
    Previous
</a>
<a asp-page="./Index"
   asp-route-pageIndexArtist="@(Model.Artist.PageIndex + 1)"
   class="btn btn-primary @nextDisabledArtist">
    Next
</a>