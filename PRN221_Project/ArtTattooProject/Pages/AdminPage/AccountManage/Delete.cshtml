@page
@model ArtTattooProject.Pages.AdminPage.AccountManage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to active/inactive this account?</h3>
<div>
    <h4>Account</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Artist)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.Artist.ArtistId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Staff)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.Staff.StaffId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.TattooLover)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.TattooLover.TattooLoverId)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Account.Username" />
        @if (Model.Account.Status == 1)
        {
            <input type="submit" value="Inactive" />
        } else
        {
            <input type="submit" value="Active" />
        }
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
