@page
@model ArtTattooProject.Pages.ArtistPage.CertificateManage.DeleteModel
@{
    ViewData["Title"] = "Delete Certificate";
}

<h1 class="mt-4">Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Certificate</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CertificateArtist.Certificate.CertificateName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CertificateArtist.Certificate.CertificateName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CertificateArtist.Urllink)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CertificateArtist.Urllink)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="CertificateArtist.CertificateId" />
        <input type="hidden" asp-for="CertificateArtist.ArtistId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-secondary">Back</a>
    </form>
</div>

<div class="text-danger">@Model.Msg</div>
