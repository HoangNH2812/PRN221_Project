@page
@model ArtTattooProject.Pages.ArtistPage.CertificateManage.CreateModel

@{
    ViewData["Title"] = "Create";
}


<h4>Artist's Certificate'</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CertificateArtist.CertificateId" class="control-label"></label>
                <select asp-for="CertificateArtist.CertificateId" class="form-control" asp-items="ViewBag.CertificateName"></select>
            </div>
            <div class="form-group">
                <label asp-for="CertificateArtist.Urllink" class="control-label"></label>
                <input asp-for="CertificateArtist.Urllink" class="form-control" />
                <span asp-validation-for="CertificateArtist.Urllink" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div> @Model.Msg</div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}