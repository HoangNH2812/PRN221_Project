@page
@model ArtTattooProject.Pages.ArtistPage.SchedulesManage.EditModel

@{
    ViewData["Title"] = "Edit schedule";
}

<div class="container">
    <h1 class="mt-4">Edit Schedule</h1> 

    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Schedule.ScheduleId" />

                <div class="form-group">
                    <label asp-for="Schedule.Time" class="control-label">Time</label>
                    <input asp-for="Schedule.Time" class="form-control" />
                    <span asp-validation-for="Schedule.Time" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-2">
        <a asp-page="./Index" class="btn btn-secondary">Back</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
