@page
@model ArtTattooProject.Pages.ArtistPage.SchedulesManage.CreateModel

@{
    ViewData["Title"] = "Create schedule";
}

<h1>Add new free schedule</h1>

<h4>Schedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Schedule.Time" class="control-label"></label>
                <input asp-for="Schedule.Time" class="form-control" />
                <span asp-validation-for="Schedule.Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div> @Model.Msg</div>
</div>

<div>
    <a asp-page="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
