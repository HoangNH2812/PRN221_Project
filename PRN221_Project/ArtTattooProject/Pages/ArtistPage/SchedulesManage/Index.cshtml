@page
@model ArtTattooProject.Pages.ArtistPage.SchedulesManage.IndexModel

@{
    ViewData["Title"] = "Manage Schedule";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Schedule[0].Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedule[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Schedule) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                    @if(item.Status == 0)
                    {
                        <div>Free</div>
                    } else
                    {
                        <div>Booked</div>
                    }
                    @* @Html.DisplayFor(modelItem => item.Status) *@
            </td>
            <td>
                    @if (item.Status == 0)
                    {
                        <a asp-page="./Edit" asp-route-id="@item.ScheduleId">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@item.ScheduleId">Delete</a>
                    }
                
            </td>
        </tr>
}
    </tbody>
</table>
@{
    var prevDisabled = !Model.Schedule.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Schedule.HasNextPage ? "disabled" : "";
}
<a asp-page="./Index"
   asp-route-pageIndex="@(Model.Schedule.PageIndex - 1)"
   class="btn btn-primary @prevDisabled">
    Previous
</a>
<a asp-page="./Index"
   asp-route-pageIndex="@(Model.Schedule.PageIndex + 1)"
   class="btn btn-primary @nextDisabled">
    Next
</a>
