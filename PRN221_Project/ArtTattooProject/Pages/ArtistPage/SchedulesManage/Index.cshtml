@page
@model ArtTattooProject.Pages.ArtistPage.SchedulesManage.IndexModel

@{
    ViewData["Title"] = "Manage Schedule";
}

<h1>Schedule</h1>

<p>
    <a asp-page="Create">Add new free schedule</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Schedule[0].Schedule.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedule[0].Schedule.Status)
            </th>
            <th>
                Booking user
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Schedule) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Schedule.Time)
            </td>
            <td>
                    @if (item.Schedule.Status == 0)
                    {
                        <div>Free</div>
                    } else
                    {
                        <div>Booked</div>
                    }
                    @* @Html.DisplayFor(modelItem => item.Status) *@
            </td>
            <td>
                    @if (item.Schedule.Status == 1)
                    {
                        @Html.DisplayFor(modelItem => item.TattooLover.Email)
                    }
            </td>
            <td>
                    @if (item.Schedule.Status == 0)
                    {
                        <a asp-page="./Edit" asp-route-id="@item.Schedule.ScheduleId">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@item.Schedule.ScheduleId">Delete</a>
                    }
                
            </td>
        </tr>
}
    </tbody>
</table>
@{
    var prevDisabled = !Model.Schedule.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Schedule.HasNextPage ? "disabled" : "";
}
<a asp-page="./Index"
   asp-route-pageIndex="@(Model.Schedule.PageIndex - 1)"
   class="btn btn-primary @prevDisabled">
    Previous
</a>
<a asp-page="./Index"
   asp-route-pageIndex="@(Model.Schedule.PageIndex + 1)"
   class="btn btn-primary @nextDisabled">
    Next
</a>
