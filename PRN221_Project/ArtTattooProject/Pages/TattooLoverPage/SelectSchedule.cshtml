@page
@model ArtTattooProject.Pages.TattooLoverPage.SelectScheduleModel
@{
    ViewData["Title"] = "Book a Slot";
}
<div class="container">
    <h1>Book a Slot</h1>
    @if (Model.Schedule.Count == 0)
    {
        <div class="alert alert-warning">This artist has no free slot to book</div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Schedule[0].Time)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Schedule)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Time)
                        </td>
                        <td>
                            <form method="post">
                                <input type="hidden" asp-for="@Model.serviceID" value="@Model.Service.ServiceId" />
                                <input type="hidden" asp-for="@Model.scheduleID" value="@item.ScheduleId" />
                                <input type="submit" value="Book this schedule" class="btn btn-primary" />
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <a asp-page="Index" class="btn btn-secondary">Back to choose service</a>
</div>
